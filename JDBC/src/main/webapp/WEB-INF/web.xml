<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
  <display-name>Java webapp</display-name>

  <servlet>
    <servlet-name>MainPageServlet</servlet-name>
    <servlet-class>com.andrii.servlet.MainPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MainPageServlet</servlet-name>
    <url-pattern>/store</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.andrii.servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.andrii.servlet.RegisterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ItemServlet</servlet-name>
    <servlet-class>com.andrii.servlet.ItemServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ItemServlet</servlet-name>
    <url-pattern>/store/items</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrderServlet</servlet-name>
    <servlet-class>com.andrii.servlet.OrderServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OrderServlet</servlet-name>
    <url-pattern>/store/order</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ManagementServlet</servlet-name>
    <servlet-class>com.andrii.servlet.ManagementServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ManagementServlet</servlet-name>
    <url-pattern>/store/manage</url-pattern>
  </servlet-mapping>

</web-app>
